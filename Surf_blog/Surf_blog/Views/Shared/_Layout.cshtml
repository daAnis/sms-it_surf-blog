<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css2?family=Faster+One&display=swap" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top header-color">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SURF.RU", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">

                    @if (Session["UserId"] != null)
                    {
                        <li>
                            @{
                                var photo = Session["Photo"];
                                if (photo != Guid.Empty.ToString())
                                {
                                    var url = string.Format("~/Content/Images/Uploads/{0}.jpg", photo);
                                    <img src=@Url.Content(url) height="25" />
                                }
                            }
                        </li>
                        <li>@Session["Nickname"]</li>
                        <li>@Html.ActionLink("Выйти", "Logout", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Войти", "Index", "Home")</li>
                        <li>@Html.ActionLink("Регистрация", "Index", "Register")</li>

                    }

                </ul>
            </div>
        </div>
    </div>
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
