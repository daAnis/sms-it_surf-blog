<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css2?family=Faster+One&family=Montserrat:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top header-color">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SURF.RU", "Index", "Feed", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">

                    @if (Session["UserId"] != null)
                    {
                        <li>
                            <div class="navbar-text">

                                @{
                                    var photo = Session["Photo"];
                                    if (photo != null)
                                    {
                                        <img class="img-circle" src=@Url.Content(photo.ToString()) width="37" height="37" />
                                    }
                                }
                                <label class="black-label">@Session["Nickname"]</label>
                            </div>
                        </li>
                        <li>
                            <a href="@Url.Action("Logout","Home")">
                                <img src="@Url.Content("~/Content/Images/logout.png")" width="22" height="23" />
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Войти", "Index", "Home")</li>
                        <li>@Html.ActionLink("Регистрация", "Index", "Register")</li>
                    }
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>