@model Surf_blog.Models.DBModels.User
@{
    ViewBag.Title = "Клуб любителей серфинга - регистрация";
}

<div class="col-sm-6 col-sm-offset-2">
    <div class="panel panel-default large-panel">
        <div class="panel-heading">
            Регистрация нового пользователя
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nickname)
                            @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control", title = "Псевдоним может содержать от 3 до 20 символов. Латиница, кириллица, цифры и подчёркивания." } })
                            @Html.ValidationMessageFor(model => model.Nickname)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email)
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", title = "Допустимое количество символов для ввода 31.", placeholder = " example@ex.ru" } })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password)
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", title = "Пароль может содержать от 6 до 20 символов. Латиница, цифры и подчёркивания.", type = "Password" } })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PasswordConfirm)
                            @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", title = "Текст поля должен совпадать с текстом поля Пароль", type = "Password" } })
                            @Html.ValidationMessageFor(model => model.PasswordConfirm)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LastName)
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", title = "Допустимое количество символов для ввода 31." } })
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", title = "Допустимое количество символов для ввода 31." } })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Photo)
                            <input name="imageData" type="file" accept="image/jpeg" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <img src="~/Content/Images/user.png" width="285" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ContactInfo)
                        @Html.TextAreaFor(model => model.ContactInfo, 10, 100, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.About)
                        @Html.TextAreaFor(model => model.About, 10, 100, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Progress)
                        @Html.TextAreaFor(model => model.Progress, 10, 100, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default pull-right">Зарегистрироваться</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="col-sm-6 col-sm-offset-4">
    <label>Уже есть аккаунт?</label>
    <a href="@Url.Action("Index","Home")" class="btn btn-default" role="button">Войти</a>
</div>
